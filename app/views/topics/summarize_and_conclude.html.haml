.container.page-content
  = render "topic_details"
  .row
    .col-md-12
      = form_for Page.new do |f|
        .field
          = f.label "Summary"
          = f.cktext_area :content
          = f.hidden_field :topic_id, value: @topic.id
        .field
          %br/
          = f.submit "Send for review", class: 'btn btn-primary'
